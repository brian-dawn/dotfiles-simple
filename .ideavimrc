let mapleader = " "

set ignorecase
set smartcase
set incsearch
set hlsearch

set visualbell
set noerrorbells

let mapleader = " "
set surround

" Normal mode: Comment current line
nnoremap gcc :action CommentByLineComment<CR>

" Visual mode: Comment selected block
xnoremap gc :action CommentByLineComment<CR>

" Keep min and max lines 5 away from top to cursor.
set scrolloff=5


" Run
nnoremap <leader>r :action Run<CR>

" Debug
nnoremap <leader>d :action Debug<CR>
